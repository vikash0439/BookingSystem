            </TextField>
            <TextField fx:id="ShowDetail" prefHeight="31.0" prefWidth="247.0" promptText="Show Detail">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="ShowTime" prefHeight="31.0" prefWidth="247.0" promptText="Show Time ">
